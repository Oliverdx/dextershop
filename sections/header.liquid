<header>
  <h1>{{  shop.name }}</h1>

  <nav>
    <ul>
      {% for link in linklists.main-menu.links %}
        <li>{{ link.title | link_to: link.url }}</li>
      {% endfor %}
    </ul>
  </nav>

  {% if section.settings.show_search %}
    <form action="/search">
      <input type="search" name="seach" id="search-form">
      <button type="submit">{{ "general.search_button_label"  | t }}</button>
    </form>
  {% endif %}
  
</header>


{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show search form ?",
      "default": true
    },
  ],
}
{% endschema %}
