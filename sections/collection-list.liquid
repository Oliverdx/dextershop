<div class="page-width">
  <div class="section-header text-center">
    <h2>{{ section.settings.title }}</h2>
  </div>

  <div class="grid grid--uniform">
    {% for block in section.blocks %}
      <div class="grid__item">
        {% include 'featured-collection', block %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Collection list",
    "class": "index-section",
    "max_blocks": 12,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Collection list"
      },
      {
        "type": "range",
        "id": "grid",
        "label": "Collections per row",
        "min": 2,
        "max": 5,
        "step": 1,
        "default": 3
      }
    ],
    "blocks": [
      {
        "type": "featured_collection",
        "name": "Collection",
        "settings": [
          {
            "label": "Collection",
            "id": "collection",
            "type": "collection"
          }
        ]
      }
    ],
    "presets": [

    ]
  }
{% endschema %}
