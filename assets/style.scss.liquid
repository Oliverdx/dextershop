/*--------------------------------------------------------------
# Normalize
--------------------------------------------------------------*/

*{
    margin: 0;
    padding: 0;
  	font-family: Arial,"Helvetica Neue",Helvetica,sans-serif;
}

input, button, textarea{
    -webkit-appearance: none;
  	outline: none;
}

button{
	border:none;
}

textarea{
	resize: none;
}

a{
    text-decoration: none;
    color: inherit;
}

ul li {
    margin-left: 1em;
}

nav ul {
    list-style: none;
}

nav ul li {
    margin: 0;
}

/*--------------------------------------------------------------
# Userful Classes and CSS Rules
--------------------------------------------------------------*/

.wrapper {
    margin: 0 auto;
    max-width: 1180px;
    box-sizing: border-box;
}

.flex{
	display: flex;
}

nav .sub-menu {
    display: none;
    position: absolute;
    top: 100%;
}

nav .item-has-child {
    position: relative;
}

nav .item-has-child:hover>.sub-menu {
    display: inline-block;
}



/*--------------------------------------------------------------
# Here the fun beggins
--------------------------------------------------------------*/

.shippingbar{
  background-color: {{ settings.shippingbar_bgcolor }};
  color: {{ settings.shippingbar_txtcolor }};
  height: 45px;
  width: 100%;
  
  a{
    color: {{ settings.shippingbar_txtcolor }};
    &:hover{
      color: {{ settings.shippingbar_hovercolor }};
    }
  }

   .wrapper {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 100%;
      padding: 0 30px;
      box-sizing: border-box;
  }
  
}

.shipping_email, .shipping_phone {
    width: 20%;
  	font-size: 16px;
}

.shipping_email .fa, .shipping_phone .fa{
  font-size: 13px;
  margin-right: 5px;
}

.shipping_email a, .shipping_phone a {
    display: flex;
    align-items: center;
}

.shipping_phone a{
	justify-content: flex-end;
}

.shipping_phone {
    text-align: right;
}

.shipping_phone .fa-phone {
    transform: rotate(90deg);
}

.shipping_text {
    text-transform: uppercase;
    font-weight: bold;
  	font-size: 18px;
}

/* Header 1 */

header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 110px;
    padding: 0 30px;
}

.header-search {
  max-width: 620px;
  width: 100%;
  display: flex;

  input[type="search"]{
      width: calc(100% - 124px);
      border: 1px solid #CCC;
      padding: 0 10px;
      font-size: 16px;
  }

  .search-btn {
      width: 124px;
      height: 37px;
      font-size: 16px;
      text-transform: uppercase;
      font-weight: bold;
      background-color: {{ settings.color_button }};
      color: {{ settings.color_button_text }};
    &:hover{
      cursor: pointer;
      background-color: {{ settings.color_button_hover }};
    }
  }
}

.header_cart {
    position: relative;
    width: 30px;
  
	.CartCount {
        position: absolute;
        top: -13px;
        right: -14px;
        background: {{ settings.cart_header_bgcolor }};
        color: #FFF;
        border-radius: 100%;
        width: 20px;
        height: 20px;
        line-height: 21px;
        font-size: 12px;
        text-align: center;
    }
    .fa-shopping-cart {
        font-size: 25px;
        color: {{ settings.cart_header_bgcolor }};
    }

}

/* Main Navigation */

.header-nav {
  & ,.sub-menu{
  	background: {{ settings.headernav_color }};
  }
  width: 100%;
  height: 55px;
  
  nav {
      height: 100%;
  }

  nav > ul {
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
  }

  nav li {
      text-transform: uppercase;
      color: #FFF;
      padding: 0 15px;
      height: 100%;
      display: flex;
      align-items: center;
  }
}